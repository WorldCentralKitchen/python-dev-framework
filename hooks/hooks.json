{
  "description": "Python development enforcement hooks",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/format_python.py",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate_git.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
